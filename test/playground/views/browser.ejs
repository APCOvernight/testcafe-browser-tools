<table class="browser">
    <tr class="browser-header">
        <td class="browser-id"><%= browser.id %></td>
        <td class="browser-name"><%= browser.name %></td>
        <td class="spacer">&nbsp;</td>
    </tr>

    <tr class="browser-action">
        <td colspan="3">
            <button class="close-browser-button" data-browser-id="<%= browser.id %>">Close</button> <span>the browser</span>
        </td>
    </tr>
    <tr class="browser-action">
        <td colspan="3">
            <button class="take-screenshot-button" data-browser-id="<%= browser.id %>">Take a screenshot</button>
                and save it to the default path or the following one:
                <input class="screenshot-path"/>
        </td>
    </tr>
    <tr class="browser-action">
        <td colspan="3">
            <div>
                <button class="resize-browser-button" data-browser-id="<%= browser.id %>">Resize</button>
                <span>the browser using size specified by:</span>
            </div>

            <div class="resize-args">
                <div class="resize-args-option">
                    <div>
                        <label><input type="radio" checked class="params-type" name="<%=browser.id%>-params-type" value="width-height"/>Width and Height</label>
                    </div>
                    <table class="resize-args-table">
                        <tr>
                            <td>
                                <label for="<%=browser.id%>-width">Width: </label>
                            </td>
                            <td>
                                <input type="number" id="<%=browser.id%>-width" class="width"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="<%=browser.id%>-height">Height: </label>
                            </td>
                            <td>
                                <input type="number" id="<%=browser.id%>-height" class="height"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="resize-args-option">
                    <div>
                        <label><input type="radio" class="params-type" name="<%=browser.id%>-params-type" value="device-name-orientation"/>Device name and
                                                    Orientation</label>
                    </div>
                    <table class="resize-args-table">
                        <tr>
                            <td>
                                <label for="<%=browser.id%>-device-name">Device name: </label>
                            </td>
                            <td>
                                <select id="<%=browser.id%>-device-name" class="device-name" size="1">
                                    <%for(var i=0;i<sizes.length;i++){%>
                                        <option value="<%=sizes[i].deviceName%>"><%=sizes[i].deviceName%></option>
                                    <%}%>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Orientation: </span>
                            </td>
                            <td>
                                <label><input type="radio" checked class="orientation" name="<%=browser.id%>-orientation" value="landscape"/> Landscape</label>
                                <label><input type="radio" class="orientation" name="<%=browser.id%>-orientation" value="portrait"/> Portrait</label>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </td>
    </tr>
</table>
